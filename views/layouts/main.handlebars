<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NiftyGifty</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/custom.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu+Condensed&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="height">
      <header>

        <nav>
          {{#if logged_in}}
            <h1 class="display-2 ml-1">Nifty Gifty</h1>
            <div class="navbar">
              <a class="navbarButtons" href="/profile">Profile</a>
              <button
                class="navbarButtons"
                onclick="logout()"
                id="logout"
              >Logout</button>
            </div>
          {{else}}
            <h1 class="display-4">Welcome to Nifty Gifty!</h1>
            <div class="navbar">
              <a class="navbarButtons" href="/login">Login</a>
              <a class="navbarButtons" href="/">Homepage</a>
            </div>
          {{/if}}
        </nav>
      </header>
      <main class="container">
        {{{body}}}
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
      crossorigin="anonymous"
    ></script>
    {{#if logged_in}}
      <script src="/js/profile.js"></script>
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/registry.js"></script>
    <script src="/js/giftee.js"></script>
  </body>

</html>