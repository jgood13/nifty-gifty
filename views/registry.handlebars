<div class="jumbotron">
  <h1 class="font-weight-bold display-4">{{name}}</h1>
  <hr class="my-4" />
</div>

<div id="title" data-title="{{name}}"></div>

<div class="container">
  <div class="row">
    <div class="col-6">

      <h1 class="">Put a new gift on the registry!</h1>
      <form>
        <div class="form-group" onsubmit="addRegistryGift(event)" >
          <label>Name of gift:</label>
          <input
            type="text"
            placeholder="Enter name of gift"
            class="form-control"
            id="registyGiftName"/>
          <input id="submitNew" data-postId="{{id}}" type="submit" class="btn"></input>
        </div>
      </form>
      <div id="theId" data-registryId="{{id}}"></div>
    </div>
    {{#if registryGifts.length}}
      <div class="col-6">
        <h2 class="giveSpace">What I would like:</h2>
        {{#each registryGifts as |registryGift|}}
          <div data-gifts="{{registryGift.gift}}" class="ml-5 row-mb-2 linkNames giveSpace gifts"> <p>{{registryGift.gift}}</p>
          <button
                  class="btn btn-sm btn-danger targetRegistry deleteRegistry ml-5"
                  data-postId="{{registryGift.id}}"
                  onclick="deleteRegistryGift(event)"
                >DELETE</button></div>
        {{/each}}
        </div>
      </div>
    {{/if}}
    
  </div>
</div>
